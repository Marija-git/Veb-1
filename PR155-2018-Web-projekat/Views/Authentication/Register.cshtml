@model PR155_2018_Web_projekat.Models.Korisnik
<link rel="stylesheet" href="~/CSS/dizajn.css" type="text/css" />
@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>
<div>
    @ViewBag.Message
</div>


<form action="~/Authentication/RegistracijaKorisnika" method="post">
    <table>
        <tr>
            <td>Korisinicko ime:</td>
            <td>
                <input type="text" name="korisnickoIme"
            </td>
        </tr>
        <tr>
            <td>Lozinka</td>
            <td>
                <input type="text" name="lozinka"
            </td>
        </tr>
        <tr>
            <td>Ime</td>
            <td>
                <input type="text" name="ime"
            </td>
        </tr>
        <tr>
            <td>Prezime</td>
            <td>
                <input type="text" name="prezime"
            </td>
        </tr>
        <tr>
            <td>Pol</td>
            <td>
                <input list="pol" name="pol" />
                <datalist id="pol">
                    <option value="Zensko"></option>
                    <option value="Musko"></option>
                    <option value="Ostalo"></option>
                </datalist>
            </td>
        </tr>
        <tr>
            <td>Email</td>
            <td>
                <input type="email" name="email" />
            </td>
        </tr>
        <tr>
            <td>Datum rodjenja</td>
            <td>  <input type="date" name="DatumRodjenja" /></td>
        </tr>
        <tr>
            <td>
                <input type="submit" value="Register" />
            </td>
        </tr>
    </table>

</form>